@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                    <!-- Need to use eager loading in the controller or else it will throw error because 
                        by default EntityFramework will load customer object and not related object -->
                    <td>@customer.MembershipType.Name</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.Id }, null)</td>
                    <td><button class="btn-link js-delete" data-customer-id="@customer.Id">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            /*
            To optimise jQuery

            The following code will implement jQuery on each record which is expensive (memory)
            $("#customers .js-delete").on("click", function () {

            we need to replace to the following implementation to implement on the table only
            $("#customers").on("click", ".js-delete", function () {

            */
            //$("#customers .js-delete").on("click", function () {
            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Do you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("success");
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
                /*
                // Default dialog box - no bootstrap, using native
                if (confirm("Do you want to delete this customer?")) {
                    $.ajax({
                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("success");
                            button.parents("tr").remove();
                        }
                    });
                }*/
            });
        });
    </script>
    
}